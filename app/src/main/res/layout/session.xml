<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/CoverArt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toTopOf="@+id/Time"
        app:layout_constraintEnd_toStartOf="@+id/ScenarioName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ddlogo" />

    <TextView
        android:id="@+id/CampaignName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:text="Campaign"
        app:layout_constraintBottom_toTopOf="@+id/ScenarioName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CoverArt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ScenarioName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:text="Scenario"
        app:layout_constraintBottom_toTopOf="@+id/GMSeats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CoverArt"
        app:layout_constraintTop_toBottomOf="@+id/CampaignName" />

    <TextView
        android:id="@+id/GMSeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:text="GMSeats"
        app:layout_constraintBottom_toTopOf="@+id/PlayerSeats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CoverArt"
        app:layout_constraintTop_toBottomOf="@+id/ScenarioName" />

    <TextView
        android:id="@+id/PlayerSeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:text="PlayerSeats"
        app:layout_constraintBottom_toTopOf="@+id/Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CoverArt"
        app:layout_constraintTop_toBottomOf="@+id/GMSeats" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:text="Timing"
        app:layout_constraintBottom_toTopOf="@id/viewSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CoverArt" />

    <Button
        android:id="@+id/viewSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Time"
        android:text="View details/signup"/>
</androidx.constraintlayout.widget.ConstraintLayout>